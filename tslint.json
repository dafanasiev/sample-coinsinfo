{
    "extends": [
      "tslint:recommended"
    ],
    "rules": {
      "arrow-parens": false,
      // Custom
      "trailing-comma": [false, {
        "multiline": "always",
        "singleline": "never"
      }],
      "interface-name": [false, "always-prefix"],
      "max-classes-per-file": [false],
      // General
      "no-console": [true,
        "time",
        "timeEnd",
        "trace"
      ],
      "max-line-length": [
        true,
        160
      ],
      "no-string-literal": false,
      "object-literal-sort-keys": false,
      "ordered-imports": false,
      "quotemark": [
        true,
        "single",
        "avoid-escape"
      ],
      "variable-name": [
        true,
        "allow-leading-underscore",
        "allow-pascal-case",
        "ban-keywords",
        "check-format"
      ]
    }
  }
  